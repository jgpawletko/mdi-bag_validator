#!/usr/bin/env ruby
# encoding: utf-8

require "bunny"

# if ARGV.empty?
#   abort "Usage: #{$0} [binding key]"
# end

host = ENV['MB_REMOTE_HOST'] || 'localhost'

conn = Bunny.new(host: host)
conn.start

ch = conn.create_channel
x  = ch.topic('rstar_topic', durable: true)
q  = ch.queue("")

q.bind(x, :routing_key => 'rstar.bag_validator.result.*')

puts " [*] Waiting for messages in #{q.name}. To exit press CTRL+C"


msgs_handled = 0
begin
  q.subscribe(:block => true) do |delivery_info, properties, body|
    puts " [x] #{delivery_info.routing_key}:#{body}"
    msgs_handled += 1
  end
rescue Interrupt => _
  $stderr.puts("========> Handled #{msgs_handled} messages <========")
  ch.close
  conn.close
end
